<main></main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'userlist', users: @users, user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.get_profile_image(80,80) %>
                <% else %>
                  <%= image_tag 'no_image', size: "80x80" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(@user.id) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>